<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="output_style" parent="TextAppearance.AppCompat">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/output_size</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_style" parent="TextAppearance.AppCompat">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button_style" parent="TextAppearance.AppCompat">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:textSize">@dimen/button_size</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="call_button_style" parent="TextAppearance.AppCompat">
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>
    <style name="option_button_style" parent="TextAppearance.AppCompat">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">@dimen/button_size</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>